{
  "name": "hekate-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo da Escola IniciÃ¡tica Caminhos de Hekate",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
