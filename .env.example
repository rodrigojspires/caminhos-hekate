# ==========================================
# DATABASE
# ==========================================
DATABASE_URL="postgresql://username:password@localhost:5432/caminhos_hekate?schema=public"

# ==========================================
# NEXTAUTH
# ==========================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="secret"

# ==========================================
# OAUTH PROVIDERS (Opcional)
# ==========================================
# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# ==========================================
# MERCADO PAGO
# ==========================================
MERCADOPAGO_ACCESS_TOKEN="your-mercadopago-access-token"
MERCADOPAGO_PUBLIC_KEY="your-mercadopago-public-key"

# ==========================================
# AWS S3 (Para upload de arquivos)
# ==========================================
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="caminhos-hekate-uploads"

# ==========================================
# UPLOADTHING (Alternativa ao S3)
# ==========================================
UPLOADTHING_SECRET="your-uploadthing-secret"
UPLOADTHING_APP_ID="your-uploadthing-app-id"

# ==========================================
# EMAIL
# ==========================================
# SMTP Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@caminhosdehekate.com.br"

# ==========================================
# WHATSAPP API
# ==========================================
WHATSAPP_API_URL="https://api.whatsapp.com"
WHATSAPP_TOKEN="your-whatsapp-token"
WHATSAPP_PHONE_NUMBER_ID="your-phone-number-id"

# ==========================================
# ENVIRONMENT
# ==========================================
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ==========================================
# ANALYTICS (Opcional)
# ==========================================
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# ==========================================
# SECURITY
# ==========================================
ENCRYPTION_KEY="your-32-character-encryption-key"
JWT_SECRET="your-jwt-secret-key"

# ==========================================
# REDIS (Para cache - Opcional)
# ==========================================
REDIS_URL="redis://localhost:6379"

# ==========================================
# DEVELOPMENT
# ==========================================
# Para desenvolvimento local
DEBUG="true"
LOG_LEVEL="debug"